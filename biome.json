{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
    "lineWidth": 120,
    "useEditorconfig": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
      "correctness": {
        "useImportExtensions": "off"
      }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		},
    "globals": ["ExecutionContext"]
	}
}
