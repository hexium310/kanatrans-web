{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["kanatrans-wasm/biome"],
  "files": {
    "ignore": ["worker-configuration.d.ts"]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": {
          "level": "error",
          "options": {
            "hooks": [
              { "name": "useValidatedState", "stableResult": [1] }
            ]
          }
        }
      }
    }
  }
}
